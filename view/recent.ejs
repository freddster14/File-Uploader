<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <%- include('nav') %>
  <main>
    <% if(locals.errors) { %>
      <% errors.forEach((err, i) => { %>
        <dialog id="error<%=i%>" open><%= err.msg %></dialog>
      <% }) %>
    <% } %>
    <%- include('sidebar') %>
    <div class="body">
      <% if (locals.breadcrumbs) { %>
        <div class="breadcrumbs">
          <a href="/">Home</a>
          <% for(let i=breadcrumbs.length - 1; i> -1; i--) { %>
            <img src="/img/right-arrow-backup-2-svgrepo-com.svg" alt="right arrow">
            <a href="<%=  breadcrumbs[i].link %>">
              <%= breadcrumbs[i].name %>
            </a>
            <% } %>
        </div>
      <% } %>
      <div class="folders">
        <% if (content.length > 0) { %>
          <% content.forEach(e => { %>
            <% if (e.mimeType) { %>
              <div class="card">
                <dialog class="img-info" id="<%= e.cloudinaryId %>">
                  <img src="<%= e.url %>" alt="<%= e.name %>">
                  <p><%= e.name %></p>
                  <p>Size: <%= e.formattedSize %></p>
                  <p>Uploaded: <%= e.createdAt.toLocaleDateString() %> â€¢ <%= e.createdAt.toLocaleTimeString() %></p>
                </dialog>
                <dialog class="controls" id="file<%= e.id %>">
                  <form action="/download/<%= e.id%>">
                    <button class="border-bottom"  onclick="this.style.display = 'none'" type="submit">Download</button>
                  </form>
                  <form action="/delete/file/<%= e.id %>" method="post">
                    <button class="border-bottom"  type="submit" onclick="this.style.display = 'none'">Delete</button>
                  </form>
                  <dialog id="edit<%= e.id %>">
                    <form action="/edit/file/<%= e.id %>" method="post">
                      <label for="name">Name</label>
                      <input id="name" type="text" name="name" value="<%= e.name %>">
                      <button type="submit" onclick="this.style.display = 'none'">Update</button>
                    </form>
                  </dialog>
                  <button id="edit<%= e.id %>" onclick="toggleModal('edit<%= e.id %>')">Edit</button>
                </dialog>
                <div tabindex="0"  class="card-img" onclick="toggleModal('<%= e.cloudinaryId %>')">
                  <img id="<%= e.cloudinaryId %>" src="<%= e.url %>" alt="<%= e.name %>">
                </div>
                <div class="card-header">
                  <p tabindex="0" class="name" id="<%= e.cloudinaryId %>" onclick="toggleModal('<%= e.cloudinaryId %>')"><%= e.name %></p>
                  <img tabindex="0" id="file<%= e.id %>" src="/img/three-dots-svgrepo-com.svg" onclick="toggleModal('file<%= e.id %>')" style="width: 25px; height: 25px;">
                </div>
              </div>
            <% } else { %>
              <class class="card">
                <dialog class="controls" id="folder<%= e.id %>">
                  <form action="/share/<%= e.id %>" method="post">
                    <button class="border-bottom" type="submit">Share</button>
                  </form>
                  <form action="/delete/folder/<%= e.id %>" method="post">
                    <button class="border-bottom" type="submit" onclick="this.style.display = 'none'">Delete</button>
                  </form>
                  <dialog id="edit<%= e.id %>">
                    <form action="/edit/folder/<%= e.id %>" method="post">
                      <label for="name">Name</label>
                      <input id="name" type="text" name="name" value="<%= e.name %>">
                      <button type="submit" onclick="this.style.display = 'none'">Update</button>
                    </form>
                  </dialog>
                  <button id="edit<%= e.id %>" onclick="toggleModal('edit<%= e.id %>')">Edit</button>
                  
                </dialog>
                <a class="card-folder" href="/folder/<%= e.id %>">
                    <img src="/img/folder-svgrepo-com.svg" alt="folder">
                </a>
                <div class="card-header">
                  <a class="name" href="/folder/<%= e.id %>"><%= e.name %></a>
                  <img tabindex="0" id="folder<%= e.id %>" src="/img/three-dots-svgrepo-com.svg" onclick="toggleModal('folder<%= e.id %>')" style="width: 25px; height: 25px;">
                </div>
              </class>
            <% } %>
          <% }) %>
      </div>
      <% } else if(locals.currentUser) { %>
        <div>
          <h1>No recent files</h1>
          <p>Use the "New" button</p>
        </div>
    
      <% } else { %>
        <h1>Sign up or log in to get started</h1>
      <% } %>
      </div>
  </main>
</body>
</html>