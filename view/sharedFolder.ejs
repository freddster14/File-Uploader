<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/dialog.css">
  <link rel="stylesheet" href="/css/home.css">
  <title>Read-Only</title>
</head>
<body>
  <%- include('nav') %>
  <main>
     <% if(locals.errors) { %>
    <% errors.forEach((err, i)=> { %>
      <dialog id="error<%=i%>" open>
        <%= err.msg %>
      </dialog>
      <% }) %>
        <% } %>
    <%- include('sidebar') %>
    <div class="body">
      <% if (locals.breadcrumbs) { %>
        <div class="breadcrumbs">
          <% for(let i=breadcrumbs.length - 1; i> -1; i--) { %>
            <a href="<%=  breadcrumbs[i].link %>">
              <%= breadcrumbs[i].name %>
            </a>
            <% if (i !== 0) { %>
              <img src="/img/right-arrow-backup-2-svgrepo-com.svg" alt="right arrow">
            <% } %>
            <% } %>
        </div>
      <% } else { %>
        <h1><%= title %></h1>
      <% } %>
      <% if (content.length > 0) { %>
        <div class="content">
          <% content.forEach(e => { %>
            <% if (e.mimeType) { %>
              <dialog class="img-info" id="<%= e.cloudinaryId %>">
                  <img src="<%= e.url %>" alt="<%= e.name %>">
                  <p><%= e.name %></p>
                  <p>Size: <%= e.formattedSize %></p>
                  <p>Uploaded: <%= e.createdAt.toLocaleDateString() %> â€¢ <%= e.createdAt.toLocaleTimeString() %></p>
              </dialog>
              <div class="card">
                <dialog class="controls" id="file<%= e.id %>">
                  <form action="/download/<%= e.id%>">
                    <button class="control-btn" onclick="this.style.display = 'none'" type="submit">Download</button>
                  </form>
                </dialog>
                <div class="card-img">
                  <img src="<%= e.url %>" alt="<%= e.name %>"
                    onclick="toggleModal('<%= e.cloudinaryId %>')">
                </div>
                <div class="card-header">
                  <p id="<%= e.cloudinaryId %>" onclick="toggleModal('<%= e.cloudinaryId %>')"><%= e.name %></p>
                  <img class="dots" src="/img/three-dots-svgrepo-com.svg" onclick="toggleModal('file<%= e.id %>')" style="width: 25px; height: 25px;">
                </div>
              </div>
            <% } else { %>
              <div class="card">
                <a class="card-folder" href="/share/<%=token%>/?folderId=<%= e.id %>">
                  <img src="/img/folder-svgrepo-com.svg" alt="folder">
                </a>
                <div class="card-header">
                  <a class="name" href="/share/<%=token%>/?folderId=<%= e.id %>">
                    <%= e.name %>
                  </a>
                  <% if (title === 'Shared-With-Me') { %>
                    <dialog class="content-info" id="info<%= e.id %>">
                      <div class="card-header">
                        <img class="icon" src="/img/folder-svgrepo-com-black.svg" alt="folder">
                        <h2><%= e.name %></h2>
                      </div>
                      <h3>Folder details</h2>
                      <div>
                        <h4 style="font-weight: 500;">Owner</h4>
                        <p><%= e.author.email %></p>
                      </div><div>
                        <h4 style="font-weight: 500;">Created</h4>
                        <p>
                          <%= e.createdAt.toLocaleDateString(undefined, { month: 'short' , day: 'numeric' , year: 'numeric' }) %>
                        </p>
                      </div><div>
                        <h4 style="font-weight: 500;">First opened</h4>
                        <p>
                          <%= e.firstAccessedAt.toLocaleDateString(undefined, { month: 'short' , day: 'numeric' , year: 'numeric' }) %>
                        </p>
                      </div>
                    </dialog>
                    <img class="info" src="/img/info-circle-svgrepo-com.svg" onclick="toggleModal('info<%= e.id%>')" alt="info">
                  <% } %>
                </div>
              </div>
            <% } %>
          <% }) %>
        </div>
      <% } else { %>
        <div class="empty-state">
          <h2>No folder or files</h2>
        </div>
      <% } %>
    </div>
  </main>
<script src="/js/modalFunctions.js"></script>
</body>
</html>